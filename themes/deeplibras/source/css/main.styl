@import "./_colors"

$small_font = small;

body{ 
    margin: 0 
    font-family: "Open Sans";
}

.content-wrapper{
    padding-top: 20px;
    max-width: 1000px;
    width: 97%;
    min-height: 57vh;
    width: calc(100% - 20px);
    margin: auto;
    font-weight: 300;
    
    h1, h2, h3 {
        font-size: 24px;
        margin: 8px 0;
    }
}

.header{
    background: $primary;
    text-align: center;
    padding: 20px;

    .logo img{ 
        width: 400px; 
        max-width: 95%;
    }

    .subtitle{
        font-weight: 300;
        margin-bottom: 0;
        margin-top: 16px;
    }
}

.navbar{
    background: $secondary;

    .nav-wrapper{
        display: flex;
        flex-wrap: wrap;
        max-width: 1000px;
        margin: auto;
    }

    .nav{ 
        margin-right: auto; 
    }

    .languages{
        display: flex;
        align-items: center;
    }

    ul { 
        list-style: none; 
        margin: 0; padding: 0;
        li{
            margin: 0; padding: 0;
            display: inline-block; 
        }
    }
    
    li.nav-item { 
        a {
            display: block;
            padding: 15px;
            text-decoration: none;
            color: $white;
            font-weight: bold;
        }
        &:hover, &.is-active{
            background: $primary;
        }
    }

    div.language{
        margin-right: 15px;
        a{
            display: flex;
            align-content: center;
        }
    }

}


.footer{
    text-align: center;
    padding: 10px;
    background: #f9f9f9;
    border-top: 1px solid #f5f5f5
}

.sponsor {
    display: inline-block;
    padding: 10px 20px;

    .sponsor-text{
        text-align: left;
        color: #666;
        font-weight: bold;
        &::after{ content: ":" }
    }

    .sponsor-image img{
        height: 65px;
    }
}

.after-footer{
    background-color: #eee;
    border-top: 1px solid #ddd;
    padding: 10px;
    min-height: 15px;
    display: flex;
    flex-flow: wrap;

    .left, .right { flex: 1; min-width: 150px}
           .right { text-align: right }
}

/* RESET */
h1, h2, h3, h4, h5, h6{
    font-weight: 400;
    color: $primary;
}

/* HELPERS */
.has-small-text { font-size: $small_font }
.has-text-white{ color: $white; }